<form class="form-horizontal">
    <div class="control-group">
	<label for="m150Control_incustom" class="control-label">{{ _('install control in custom controls section') }}</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level" data-bind="checked: settings.settings.plugins.M150Control.inCustomControl" id="m150Control_incustom">
        </div>
    </div>
    <div class="control-group">
	<label for="m150Control_autoCommit" class="control-label">{{ _('Send automatically when user change color') }}</label>
	<div class="controls">
	    <input type="checkbox" class="input-block-level" data-bind="checked: settings.settings.plugins.M150Control.autoCommit" id="m150Control_autoCommit">
	</div>
    </div>
    <div class="control-group">
        <label for="m150control_enablergbw" class="control-label">{{ _('Enable RGB WHITE led') }}</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level" data-bind="checked: settings.settings.plugins.M150Control.enableRGBW" id="m150control_enablergbw">
        </div>
    </div>

    <div data-bind="foreach: settings.settings.plugins.M150Control.presets">
        <div class="control-group m150Control-row">
         <label class="control-label">#<span data-bind="text:$index"></span> :</label>
         <div class="controls">
             <input type="color" data-bind="value: color">
             <input type="checkbox" class="input-block-level" data-bind="checked: active"/>
             <a href='#' data-bind='click: $parent.movePresetUp' class="fa fa-chevron-up"></a>
             <a href='#' data-bind='click: $parent.movePresetDown' class="fa fa-chevron-down"></a>
             <a href='#' data-bind='click: $parent.removePreset' class="fa fa-trash-o"></a>
         </div>
      </div>
   </div>
   <div class="control-group">
      <div class="controls">
         <button data-bind='click: addPreset' type="button"><i class="fa fa-plus-circle"></i> {{ _('Add Color') }}</button>
      </div>
   </div>
</form>
